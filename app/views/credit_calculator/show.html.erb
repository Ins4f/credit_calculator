<%= form_tag({ controller: :credit_calculator, action: :calculate }, method: :get) do %>
    <%= number_field(nil, :amount, in: 1..1000000000, step: 1, placeholder: '10000') %> Cумма <br>
    <%= number_field(nil, :months, in: 1..300, step: 1, placeholder: '12') %> Срок <br>
    <%= number_field(nil, :percent, in: 0.1..100, step: 0.1, placeholder: '10') %> Процентная ставка <br>
    <%= radio_button_tag(:kind, :anuitet) %>
    <%= label_tag(:age_child, "аннуитетный") %>
    <%= radio_button_tag(:kind, :differential) %>
    <%= label_tag(:age_adult, "дифференцированный") %> <br>
    <%= submit_tag("Расчитать") %>
<% end %>


<% if @result %>
    <% @result[:months].each_with_index do |month, index| %>
     <%= "#{index + 1}   |   #{month[:balance]}   |   #{month[:np]}   |   #{month[:od]}   |  #{month[:od_plus_np]}" %><br>
    <% end %>
<% end %>
